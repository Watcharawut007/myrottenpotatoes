
%div{:id=>"suit"}
  %h2{:style => 'text-align:center;'} Edit Movie

  = form_tag movie_path(@movie), :method => :put do

    = label :movie, :title, 'Title'
    = text_field :movie, 'title' , required: true

    = label :movie, :rating, 'Rating'
    = select :movie, :rating, ['G','PG','PG-13','R','NC-17']

    = label :movie, :release_date, 'Released On'
    = date_select :movie, :release_date, start_year: 1930

    = label :movie, :description, 'Description'
    = text_field :movie, :description , required: true
    %br
    %br
    = submit_tag 'Save Changes'
    = link_to 'Cancel', movie_path(@movie)