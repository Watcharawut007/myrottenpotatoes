%div{:id=>"bigsuit"}
  %h2{:style => 'text-align:center;'}Details about #{@movie.title}

  
  %h3 Rating: 
  %p{:style => "margin-left:20px;"}= @movie.rating

  %h3 Released on:
  %p{:style => "margin-left:20px;"}= @movie.release_date.strftime("%B %d, %Y")

  %h3 Description:
  %p{:style => "margin-left:20px;"}=description= @movie.description
  %h3 Reviews:
  = link_to 'Add Review', new_movie_review_path(@movie)
  %ul#details
    %li
      Average potatoes:

      %tr
      %td= @sum

    - @movie.reviews.each do |review|
      %tr
        %td
          %div{class:"dialogbox"}
            %div{class:"body"}
              %div{class:"message"}
                %span=review.moviegoer.name
                %br
                %span comment :
                %span= review.comments
        
          -if @current_user
            -if @current_user.name == review.moviegoer.name
              %div{:style=> "text-align:right;"}
                = link_to 'Edit', edit_movie_review_path(@movie,review)
                = link_to 'Delete', movie_review_path(@movie,review), :method => :delete
    
          <br>

  = link_to 'Edit info', edit_movie_path(@movie)
  = link_to 'Delete', movie_path(@movie), :method => :delete
  = link_to 'Back to movie list', movies_path
